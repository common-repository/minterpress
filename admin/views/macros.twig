{%- macro svg(file, customClasses) -%}
  {% set customClasses = customClasses ?? null %}
  <span class="{{customClasses}}" aria-hidden="true">
    {{ include('images/icons/' ~ file ~ '.svg', {
      customClasses: customClasses
    }, ignore_missing = true ) }}
  </span>
{%- endmacro -%}

{%- macro default(strings, key) -%}
  {% if strings[key] %}
    {{ strings[key] }}
  {% else %}
    {{ key }}*
  {% endif %}
{%- endmacro -%}

